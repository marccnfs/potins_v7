{% extends '../../base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<div class="log-machina">
    <h1 class="title_log">{{vartwig.title}}</h1>
    <div class="svg-bulle_open">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200">{# <circle cx="100" cy="100" r="80"/>#}</svg>
        <div class="content_login_affi">

                {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
            <div class="checkerrember_mb">
                <p>Oups !!!</p>
                <h5 class="glass-field_identify">Mot de passe oublié ?<br>Renseignez votre adresse e-mail pour recevoir votre lien de réinitialisation</h5>
            </div>

        <button class="btn btn-primary">Soumettre</button>
    {{ form_end(requestForm) }}
        </div>
    </div>
</div>
{% endblock %}
