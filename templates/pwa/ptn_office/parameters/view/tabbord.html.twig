<div class="_fx-R fx-fe _h10-10">
    <div class="_t-c _m-lr-5">
        <div class="til_rlt">Actuellement</div>
        <div class="space_tag_loc">
            <div class="space">
                <div class="bull_tag active" >
                    {% if openday is defined  %}
                        {% if openday %}
                            <div class="-br-Ma">ouvert</div>
                        {% else %}
                            <div class="-br-Ma">fermé</div>
                        {% endif %}
                    {% else %}
                        <div>horaires d'ouverture non renseignés</div>
                        <a href="{{ path('opendays_edit',{'slug':board.slug, 'id':board.id}) }}"><em>modifier</em></a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="_t-c _m-lr-5">
        <div class="til_rlt">Post</div>
        <div class="space_tag_loc">
            <div class="space">
                <div class="bull_tag active" >
                    <div class="-br-Ma">{{posts|default }}</div>
                </div>
            </div>
        </div>
    </div>
    <div class="_t-c _m-lr-5">
        <div class="til_rlt">Offre</div>
        <div class="space_tag_loc">
            <div class="space">
                <div class="bull_tag active" >
                    <div class="-br-Ma">{{ shops|default}}</div>
                </div>
            </div>
        </div>
    </div>
    <div class="_t-c _m-lr-5">
        <div class="til_rlt">localisation</div>
        <div class="space_tag_loc">
            <div class="space">
                <div class="bull_tag active" >
                    {% if board.locality|length > 0 %}
                        <div class="-br-Ma">{{board.locality.city}}</div>
                    {% else %}
                        <div>pas de localisation</div>
                        <a href="{{ path('localize_change',{'slug':board.slug}) }}"><em>modifier</em></a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>