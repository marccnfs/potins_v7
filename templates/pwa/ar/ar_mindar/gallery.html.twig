{% block body %}
    <section class="ar-section">
        <header class="ar-section__header">
            <div class="ar-section__intro">
                <h1 class="ar-section__title">Galerie des scènes RA</h1>
                <p class="ar-section__lead">Retrouvez vos expériences MindAR et relancez-les en un clic.</p>
            </div>
            <div class="ar-actions">
                <a href="{{ path('ar_mindar_create') }}" class="btn btn-secondary">Créer une nouvelle scène</a>
            </div>
        </header>

        {% set cards = sceneCards ?? [] %}
        {% if cards is not empty %}
            <div class="ar-gallery__grid">
                {% for card in cards %}
                    {% set scene = card.scene %}
                    <article class="ar-card">
                        <div class="ar-card__body">
                            <div class="ar-card__header">
                                <div>
                                    <h2 class="ar-card__title">{{ scene.title }}</h2>
                                    <p class="ar-card__meta">Créée le {{ scene.createdAt|date('d/m/Y H:i') }}</p>
                                </div>
                                {% if card.shareQr %}
                                    <div class="ar-card__qr">
                                        <img src="{{ card.shareQr }}" alt="QR code de la scène {{ scene.title }}" />
                                    </div>
                                {% endif %}
                            </div>
                            <dl class="ar-card__list">
                                <div>
                                    <dt>Cible MindAR</dt>
                                    <dd>{{ scene.mindTargetPath ?? '—' }}</dd>
                                </div>
                                <div class="ar-card__list-group">
                                    <div>
                                        <dt>Index cible</dt>
                                        <dd>{{ scene.targetIndex }}</dd>
                                    </div>
                                    <div>
                                        <dt>Type</dt>
                                        <dd>{{ scene.contentType|default('model')|capitalize }}</dd>
                                    </div>
                                </div>
                                <div>
                                    <dt>Média principal</dt>
                                    <dd title="{{ scene.modelUrl }}">{{ scene.modelUrl }}</dd>
                                </div>
                                {% if scene.soundUrl %}
                                    <div>
                                        <dt>Ambiance sonore</dt>
                                        <dd title="{{ scene.soundUrl }}">{{ scene.soundUrl }}</dd>
                                    </div>
                                {% endif %}
                            </dl>
                        </div>
                        <footer class="ar-card__footer">
                            <div class="ar-actions__group">
                                <a href="{{ path('ar_view', {id: scene.id}) }}" class="btn btn-secondary">Ouvrir</a>
                                <a href="{{ path('ar_mindar_edit', {id: scene.id}) }}" class="btn btn-light">Modifier</a>
                                {% if card.experienceUrl %}
                                    <a href="{{ card.experienceUrl }}" target="_blank" rel="noopener" class="btn">Lancer</a>
                                {% endif %}
                                {% if card.shareUrl %}
                                    <a href="{{ card.shareUrl }}" target="_blank" rel="noopener" class="btn btn-tertiary">Partager</a>
                                {% endif %}
                                <form method="post" action="{{ path('ar_scene_delete', {id: scene.id}) }}" onsubmit="return confirm('Supprimer définitivement cette scène ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_scene_' ~ scene.id) }}">
                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                </form>
                            </div>
                        </footer>
                    </article>
                {% endfor %}
            </div>
        {% else %}
            <div class="ar-empty-state">
                <p class="ar-empty-state__title">Aucune scène n'est enregistrée pour le moment.</p>
                <p class="ar-empty-state__text">Créez votre première scène pour alimenter cette galerie.</p>
                <div class="ar-empty-state__actions">
                    <a href="{{ path('ar_mindar_create') }}" class="btn btn-secondary">Commencer</a>
                </div>
            </div>
        {% endif %}
    </section>
{% endblock %}
