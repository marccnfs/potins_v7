{% block body %}
    <section class="container mx-auto px-4 py-8 space-y-8">
        <header class="flex flex-wrap items-center justify-between gap-4">
            <div>
                <h1 class="text-2xl font-semibold text-gray-900">Galerie des scènes RA</h1>
                <p class="mt-1 text-sm text-gray-600">Retrouvez vos expériences MindAR et relancez-les en un clic.</p>
            </div>
            <a href="{{ path('ar_mindar_create') }}" class="btn btn-secondary">Créer une nouvelle scène</a>
        </header>

        {% set cards = sceneCards ?? [] %}
        {% if cards is not empty %}
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2 xl:grid-cols-3">
                {% for card in cards %}
                    {% set scene = card.scene %}
                    <article class="flex h-full flex-col overflow-hidden rounded-lg border border-gray-200 bg-white shadow-sm">
                        <div class="flex flex-1 flex-col gap-4 p-5">
                            <div class="flex items-start justify-between gap-3">
                                <div>
                                    <h2 class="text-lg font-semibold text-gray-900">{{ scene.title }}</h2>
                                    <p class="text-xs text-gray-500">Créée le {{ scene.createdAt|date('d/m/Y H:i') }}</p>
                                </div>
                                {% if card.shareQr %}
                                    <img src="{{ card.shareQr }}" alt="QR code de la scène {{ scene.title }}" class="h-20 w-20 rounded-md border border-gray-200 bg-white p-1 shadow-sm object-contain" />
                                {% endif %}
                            </div>
                            <dl class="grid grid-cols-1 gap-3 text-sm text-gray-700">
                                <div>
                                    <dt class="text-xs font-semibold uppercase tracking-wide text-gray-500">Cible MindAR</dt>
                                    <dd class="break-all">{{ scene.mindTargetPath ?? '—' }}</dd>
                                </div>
                                <div class="grid grid-cols-2 gap-3">
                                    <div>
                                        <dt class="text-xs font-semibold uppercase tracking-wide text-gray-500">Index cible</dt>
                                        <dd>{{ scene.targetIndex }}</dd>
                                    </div>
                                    <div>
                                        <dt class="text-xs font-semibold uppercase tracking-wide text-gray-500">Type</dt>
                                        <dd>{{ scene.contentType|default('model')|capitalize }}</dd>
                                    </div>
                                </div>
                                <div>
                                    <dt class="text-xs font-semibold uppercase tracking-wide text-gray-500">Média principal</dt>
                                    <dd class="truncate" title="{{ scene.modelUrl }}">{{ scene.modelUrl }}</dd>
                                </div>
                                {% if scene.soundUrl %}
                                    <div>
                                        <dt class="text-xs font-semibold uppercase tracking-wide text-gray-500">Ambiance sonore</dt>
                                        <dd class="truncate" title="{{ scene.soundUrl }}">{{ scene.soundUrl }}</dd>
                                    </div>
                                {% endif %}
                            </dl>
                        </div>
                        <footer class="border-t border-gray-200 bg-gray-50 p-4">
                            <div class="flex flex-wrap gap-2">
                                <a href="{{ path('ar_view', {id: scene.id}) }}" class="btn btn-secondary">Ouvrir</a>
                                {% if card.experienceUrl %}
                                    <a href="{{ card.experienceUrl }}" target="_blank" rel="noopener" class="btn">Lancer</a>
                                {% endif %}
                                {% if card.shareUrl %}
                                    <a href="{{ card.shareUrl }}" target="_blank" rel="noopener" class="btn btn-tertiary">Partager</a>
                                {% endif %}
                            </div>
                        </footer>
                    </article>
                {% endfor %}
            </div>
        {% else %}
            <div class="rounded-lg border border-dashed border-gray-300 bg-gray-50 p-10 text-center text-gray-600">
                <p class="text-lg font-semibold">Aucune scène n'est enregistrée pour le moment.</p>
                <p class="mt-2 text-sm">Créez votre première scène pour alimenter cette galerie.</p>
                <a href="{{ path('ar_mindar_create') }}" class="btn btn-secondary mt-4 inline-flex items-center justify-center gap-2">Commencer</a>
            </div>
        {% endif %}
    </section>
{% endblock %}
