<section class="ar-section ar-section--compact">
    <h1 class="ar-section__title">Démo MindAR (NPM)</h1>
    <p class="ar-section__lead">Scannez une image du pack démo (index 0).</p>
</section>

<!-- scripts chargés par mindar_demo.js -->
<a-scene
    mindar-image="imageTargetSrc: /mindar/packs/zen-demo/targets.mind;"
    renderer="colorManagement:true"
    vr-mode-ui="enabled:false">
    <a-assets>
        <a-asset-item id="lotus" src="/build/models/lotus.glb"></a-asset-item>
    </a-assets>
    <a-camera look-controls="enabled:false"></a-camera>
    <a-entity mindar-image-target="targetIndex: 0">
        <a-gltf-model
            src="#lotus"
            position="0 0 0"
            rotation="0 0 0"
            scale="0.5 0.5 0.5"
            animation__breath="property=scale; dir=alternate; dur=4000; loop:true; to=0.6 0.6 0.6"></a-gltf-model>
    </a-entity>
</a-scene>

