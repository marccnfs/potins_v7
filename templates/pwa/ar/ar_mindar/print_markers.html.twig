{# templates/ar/print_markers.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <title>{{ eventTitle }} — Pack {{ pack.name }}</title>
    <style>
        @page { size: A4; margin: 14mm; }
        html, body { margin: 0; padding: 0; font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; color: #111; }
        .page { page-break-after: always; position: relative; min-height: 270mm; }
        .header { text-align: center; margin-bottom: 8mm; }
        .title { font-size: 16pt; font-weight: 700; }
        .subtitle { font-size: 11pt; color: #444; margin-top: 2mm; }
        .card {
            border: 1px solid #ddd; border-radius: 8px; padding: 8mm;
            display: grid; grid-template-rows: auto 1fr auto; gap: 6mm;
        }
        .marker {
            display: flex; align-items: center; justify-content: center;
            border: 1px dashed #bbb; border-radius: 6px; padding: 6mm; background: #fafafa;
            min-height: 160mm;
        }
        .marker img { max-width: 100%; max-height: 170mm; object-fit: contain; }
        .meta { display: flex; justify-content: space-between; align-items: baseline; }
        .badge { font-size: 11pt; padding: 2mm 4mm; border-radius: 6px; background: #eef7ff; border: 1px solid #cfe7ff; }
        .label { font-size: 13pt; font-weight: 600; }
        .footer {
            font-size: 9pt; color: #666; display: grid; gap: 2mm;
        }
        .instructions { margin-top: 1mm; }
        .muted { color: #777; }

        /* Marques de coupe (crop marks) */
        .crop { position: absolute; inset: 0; pointer-events: none; }
        .crop:before, .crop:after { content: ""; position: absolute; width: 100%; height: 100%; }
        /* coins */
        .crop .tl, .crop .tr, .crop .bl, .crop .br {
            position: absolute; width: 10mm; height: 10mm;
            background: linear-gradient(#000 0 0) left 0 top 0/8mm 0.3mm no-repeat,
            linear-gradient(#000 0 0) left 0 top 0/0.3mm 8mm no-repeat;
            opacity: .6;
        }
        .crop .tr {
            right: 0; top: 0;
            background: linear-gradient(#000 0 0) right 0 top 0/8mm 0.3mm no-repeat,
            linear-gradient(#000 0 0) right 0 top 0/0.3mm 8mm no-repeat;
        }
        .crop .bl {
            left: 0; bottom: 0;
            background: linear-gradient(#000 0 0) left 0 bottom 0/8mm 0.3mm no-repeat,
            linear-gradient(#000 0 0) left 0 bottom 0/0.3mm 8mm no-repeat;
        }
        .crop .br {
            right: 0; bottom: 0;
            background: linear-gradient(#000 0 0) right 0 bottom 0/8mm 0.3mm no-repeat,
            linear-gradient(#000 0 0) right 0 bottom 0/0.3mm 8mm no-repeat;
        }

        /* Version écran pour contrôle rapide */
        @media screen {
            body { background: #f0f2f5; padding: 20px; }
            .page { background: white; box-shadow: 0 0 0 1px #ddd, 0 10px 30px rgba(0,0,0,.08); margin: 0 auto 24px; width: 210mm; }
        }
    </style>
</head>
<body>
{% for item in pack.items %}
    <section class="page">
        <div class="header">
            <div class="title">{{ eventTitle }}</div>
            <div class="subtitle">Pack <strong>{{ pack.name }}</strong> — Cible n°{{ item.index }}</div>
        </div>

        <div class="card">
            <div class="meta">
                <div class="label">{{ item.label }}</div>
                <div class="badge">Index : {{ item.index }}</div>
            </div>

            <div class="marker">
                {# vignettes fidèles à l’impression ; idéalement grande définition #}
                <img src="{{ item.thumb }}" alt="Cible {{ item.index }} – {{ item.label }}">
            </div>

            <div class="footer">
                <div class="instructions">
                    <strong>Instructions :</strong> Imprimez en A4 (couleur conseillée, papier mat). Découpez au besoin.
                    Évitez les reflets. Scannez avec la page de test RA correspondante.
                </div>
                <div class="muted">
                    Fichier cible : {{ pack.pathMind }} • Index : {{ item.index }} • Test : {{ siteUrl|default('/ra/mindar/test-multi') }}
                </div>
            </div>
        </div>

        <div class="crop">
            <div class="tl"></div><div class="tr"></div><div class="bl"></div><div class="br"></div>
        </div>
    </section>
{% endfor %}
</body>
</html>
