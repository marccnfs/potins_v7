{% block body %}
    <section class="ar-section ar-section--compact">
        <h1 class="ar-section__title">Préparation de l’expérience Zen</h1>
        <form id="form" class="ar-form">
            <div class="form-group">
                <label for="model">Modèle 3D</label>
                <select id="model" name="model" class="form-control ar-form__select">
                    <option value="lotus">Lotus</option>
                    <option value="rock">Pierre</option>
                    <option value="bamboo">Bambou</option>
                </select>
            </div>

            <div class="form-group">
                <label for="marker">Marqueur</label>
                <select id="marker" name="marker" class="form-control ar-form__select">
                    <option value="hiro">hiro</option>
                    <option value="kanji">kanji</option>
                </select>
            </div>

            <div class="form-group">
                <label for="sound">Ambiance sonore</label>
                <select id="sound" name="sound" class="form-control ar-form__select">
                    <option value="">Silence</option>
                    <option value="forest">Forêt apaisante</option>
                    <option value="water">Eau qui coule</option>
                </select>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Lancer la scène</button>
            </div>
        </form>
    </section>

    <script>
        document.getElementById('form').addEventListener('submit', e => {
            e.preventDefault();
            const params = new URLSearchParams(new FormData(e.target));
            window.location.href = `/ra/lotus?${params.toString()}`;
        });
    </script>
{% endblock %}
