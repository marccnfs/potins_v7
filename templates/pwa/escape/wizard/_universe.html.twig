{% block body %}
<div class="_wb">
    <div class="container_bo_member">
        <div class="bo_content">
                {% set total = total ?? 6 %}
                {% set steps = {
                    1: eg.titresEtapes[1]|default('Cryptex num√©rique'),
                    2: eg.titresEtapes[2]|default('QR code (g√©oloc ou cach√©)'),
                    3: eg.titresEtapes[3]|default('Puzzle (image en tuiles)'),
                    4: eg.titresEtapes[4]|default('Formulaire √† pi√®ge logique'),
                    5: eg.titresEtapes[5]|default('Vid√©o interactive'),
                    6: eg.titresEtapes[6]|default('Code HTML minimal')
                } %}

                <div class="wizard-layout">
                    <aside class="wizard-aside">
                        <div class="card">
                            <h2 class="aside-title">üß≠ Tunnel de cr√©ation</h2>
                            <ol class="aside-steps">
                                <li class="is-current">
                                    <span class="index">0</span>
                                    <span class="label">Univers</span>
                                </li>
                                {% for i in 1..total %}
                                    <li class="{{ readyMap[i]|default(false) ? 'is-ready' : '' }}">
                                        <span class="index">{{ i }}</span>
                                        <a class="label" href="{{ path('wizard_step', { id: eg.id, step: i }) }}">{{ steps[i] }}</a>
                                        {% if readyMap[i]|default(false) %}<span class="badge">OK</span>{% endif %}
                                    </li>
                                {% endfor %}
                                <li>
                                    <span class="index">‚Ä¢</span>
                                    <a class="label" href="{{ path('wizard_overview', { id: eg.id }) }}">Aper√ßu & publication</a>
                                </li>
                            </ol>
                        </div>

                        <div class="card tip">
                            <h3>Conseils</h3>
                            <ul class="bullets">
                                <li>Un <strong>contexte</strong> court vaut mieux qu‚Äôun long roman.</li>
                                <li>Formule l‚Äô<strong>objectif</strong> en une phrase claire.</li>
                                <li>Donne un <strong>indice global</strong> dans le mode d‚Äôemploi si tu veux.</li>
                            </ul>
                        </div>
                    </aside>

                    <main class="wizard-main">
                        <div class="card">
                            <h1>‚ú® Cr√©e / √©dite l‚Äôunivers</h1>
                            {{ form_start(form, { attr: { enctype: 'multipart/form-data' } }) }}

                            <div class="grid2">
                                <div>
                                    {{ form_row(form.title) }}
                                    <div class="grid2" style="gap:.75rem;">
                                        {{ form_row(form.difficulty) }}
                                        {{ form_row(form.durationMinutes) }}
                                    </div>
                                    {{ form_row(form.context) }}
                                    {{ form_row(form.goal) }}
                                    {{ form_row(form.howto) }}
                                    {{ form_row(form.guide) }}
                                </div>
                                <div>
                                    <h3>Titres des 6 √©tapes</h3>
                                    <div class="steps-grid">
                                        {% for i, field in form.stepTitles %}
                                            <label>√âtape {{ i }}</label>
                                            {{ form_widget(field, {'attr': {'placeholder': steps[i] }}) }}
                                        {% endfor %}
                                    </div>

                                    {# ... au m√™me endroit o√π tu as d√©j√† "Illustrations" ... #}
                                    <hr>
                                    <h3>Illustrations</h3>

                                    {# Aper√ßu "couverture" (1re illustration) #}
                                    {% set illustrations = eg.illustrations ?? [] %}
                                    {% set cover = illustrations|first %}

                                    <div class="cover-preview" style="margin-bottom:.6rem;">
                                        {% if cover %}
                                            <img src="{{ vich_uploader_asset(cover, 'imageFile') }}" alt="Couverture" style="width:100%;aspect-ratio:16/9;object-fit:cover;border-radius:10px;border:1px solid #e5e7eb;">
                                        {% else %}
                                            <div class="ph" style="width:100%;aspect-ratio:16/9;border-radius:10px;border:1px dashed #e5e7eb;display:grid;place-items:center;color:#6b7280">Aucune image de couverture</div>
                                        {% endif %}
                                    </div>

                                    {# Miniatures + suppression #}
                                    <div class="illu-grid" style="display:grid;grid-template-columns:repeat(3,1fr);gap:.4rem;">
                                        {% for illu in eg.illustrations %}
                                            <div class="illu-item" style="border:1px solid #e5e7eb;border-radius:8px;padding:.3rem;background:#fff;">
                                                <img src="{{ vich_uploader_asset(illu, 'imageFile') }}" alt="" style="width:100%;aspect-ratio:1;object-fit:cover;border-radius:6px;">
                                                {% set id = illu.id %}
                                                <label class="del" style="display:block;margin-top:.35rem;font-size:.9rem;">
                                                    <input type="checkbox" name="{{ form.deleteImages.vars.full_name }}[]" value="{{ id }}"> Supprimer
                                                </label>
                                            </div>
                                        {% else %}
                                            <p class="muted">Aucune image pour l‚Äôinstant.</p>
                                        {% endfor %}
                                    </div>

                                    {# Upload multiples #}
                                    <div style="margin-top:.6rem;">
                                        {{ form_row(form.newImages) }}
                                    </div>

                                    {{ form_row(form.deleteImages, {'label': 'Supprimer (liste) ‚Äî optionnel', 'row_attr': {'class': 'hidden'}}) }}
                                </div>
                            </div>

                            <div class="form-actions">
                                <a class="btn" href="{{ path('wizard_overview', { id: eg.id }) }}">Annuler</a>
                                <button class="btn btn-primary">Enregistrer</button>
                              {#  <a class="btn btn-light" href="{{ path('wizard_step', { id: eg.id, step: 1 }) }}">Passer √† l‚Äô√©tape 1 ‚Üí</a>  #}
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </main>
                </div>
        </div>
    </div>
</div>
{% endblock %}
{% use "js/js_escape.html.twig" %}
{% block javascripts %}
{{ parent() }}
{% endblock %}
