{% extends 'pwa/escape/basepublic.html.twig' %}

{% block body %}
    <section class="escape-team play">
        <header class="escape-team__hero">
            <p class="kicker">Parcours équipe</p>
            <h1>{{ team.name }} · {{ run.title }}</h1>
            <p class="muted">Suis les étapes, consomme des indices et soumets la phrase finale.</p>
        </header>

        {% if run.status != 'running' %}
            <div class="alert alert-warning">Le jeu n'est pas encore lancé. Reste en attente du maître.</div>
        {% endif %}

        <div class="escape-team__grid">
            <div class="escape-team__panel">
                <h2>Progression</h2>
                <ol class="escape-team__steps">
                    {% for i in 1..5 %}
                        {% set state = session ? (session.stepStates[i] ?? {}) : {} %}
                        <li class="{% if state.completedAt is defined %}done{% endif %}">
                            <div class="escape-team__step-head">
                                <span>Étape {{ i }}</span>
                                {% if state.completedAt is defined %}
                                    <small>validée</small>
                                {% else %}
                                    <button class="btn btn-small" data-step="{{ i }}" data-action="complete">Marquer terminé</button>
                                {% endif %}
                            </div>
                            {% if state.partials is defined %}
                                <p class="muted">Fragments : {{ state.partials|length }}/{{ state.partialCount ?? state.partials|length }}</p>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ol>
                <div class="escape-team__controls">
                    <button class="btn" data-action="hint">+1 indice</button>
                    <button class="btn" data-action="penalty">+1 pénalité</button>
                </div>
            </div>

            <div class="escape-team__panel">
                <h2>Phrase finale</h2>
                <form id="final-form">
                    <label>Secret / code</label>
                    <input type="text" name="secretCode" placeholder="Code secret" />
                    <label>Phrase finale</label>
                    <textarea name="finalAnswer" rows="3" placeholder="Votre réponse"></textarea>
                    <button class="btn btn-primary" type="submit">Valider la fin</button>
                </form>
                <div id="final-result" class="muted"></div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        (function () {
            const runSlug = '{{ run.shareSlug }}';
            const teamId = {{ team.id }};
            const stepButtons = document.querySelectorAll('[data-action="complete"]');
            const hintBtn = document.querySelector('[data-action="hint"]');
            const penaltyBtn = document.querySelector('[data-action="penalty"]');
            const finalForm = document.getElementById('final-form');
            const finalResult = document.getElementById('final-result');

            const post = (url, payload) => fetch(url, {
                method: 'POST',
                headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                body: new URLSearchParams(payload),
            }).then((r) => r.json());

            stepButtons.forEach((btn) => {
                btn.addEventListener('click', () => {
                    const step = btn.dataset.step;
                    post(`{{ path('escape_team_step_complete', {slug: 'SLUG', teamId: 'TEAM', step: 'STEP'}) }}`
                        .replace('SLUG', runSlug)
                        .replace('TEAM', teamId)
                        .replace('STEP', step), {})
                        .then(() => btn.textContent = 'Validée')
                        .catch(() => btn.textContent = 'Erreur');
                });
            });

            if (hintBtn) {
                hintBtn.addEventListener('click', () => {
                    post(`{{ path('escape_team_consume_hint', {slug: 'SLUG', teamId: 'TEAM'}) }}`
                        .replace('SLUG', runSlug)
                        .replace('TEAM', teamId), {count: 1});
                });
            }

            if (penaltyBtn) {
                penaltyBtn.addEventListener('click', () => {
                    post(`{{ path('escape_team_consume_hint', {slug: 'SLUG', teamId: 'TEAM'}) }}`
                        .replace('SLUG', runSlug)
                        .replace('TEAM', teamId), {count: 1, reason: 'penalty'});
                });
            }

            if (finalForm) {
                finalForm.addEventListener('submit', (e) => {
                    e.preventDefault();
                    const data = new FormData(finalForm);
                    post(`{{ path('escape_team_finalize', {slug: 'SLUG', teamId: 'TEAM'}) }}`
                        .replace('SLUG', runSlug)
                        .replace('TEAM', teamId), {
                        finalAnswer: data.get('finalAnswer') || '',
                        secretCode: data.get('secretCode') || '',
                    }).then((res) => {
                        if (finalResult) {
                            finalResult.textContent = 'Fin validée !';
                        }
                    });
                });
            }
        })();
    </script>
{% endblock %}
