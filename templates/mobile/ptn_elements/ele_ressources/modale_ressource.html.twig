        <div class="bac_img" style="background-image: url('{{ asset('spaceweb/template/'~ressource.pict.namefile) }}')"></div>
        {% endif %}
    </div>
    #}
</div>
<div class="pwa-inner-ressourc">
    <div class="pwa-ressourc-content">
        <div class="pwa-r-ctnt">
            <p class="pwa-iner-list">{{ressource.descriptif}}</p>
        </div>
    </div>
</div>
<div class="pwa-inner-post">
    {% if content is not same as ("") %}
        <div class="pwa-post-content">
            <div class="article_content">
                {{ content|raw }}
            </div>
        </div>
    {% endif %}
</div>





