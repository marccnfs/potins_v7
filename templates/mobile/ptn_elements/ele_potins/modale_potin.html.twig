{% if post.media.imagejpg|length > 0 and post.media.imagejpg[0].namefile is defined %}
    <div class="illustr-potin">
        <div class="pt_pict_rec">
            <div class="bac_img"
                 style="background-image: url({{ asset(post.media.imagejpg[0].getWebPath) }})"
                 role="presentation">
                <img src="{{ asset(post.media.imagejpg[0].getWebPath) }}"
                     alt="{{ post.titre }}"
                     loading="lazy">
            </div>
        </div>
    </div>
{% endif %}
{% if content is not same as ("") %}
<div class="pwa-inner-post">
    <div class="pwa-post-content">
        <div class="pwa-article-content">
            {{ article.contenu|markdown_to_html }}
        </div>
    </div>
</div>
{% endif %}
