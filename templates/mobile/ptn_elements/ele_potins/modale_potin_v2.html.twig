{% if potin.subject is not same as (" ") %}
    <h3 class="potin-subject">{{ potin.subject|raw|lower|capitalize }}</h3>
{% endif %}

<div class="illustr-potin">
    <div class="pt_pict_rec">
        {% if potin.media.imagejpg[0].namefile is defined %}
            <div class="bac_img"
                 style="background-image: url({{ asset(potin.media.imagejpg[0].getWebPath) }})"
                 role="presentation">
                <img src="{{ asset(potin.media.imagejpg[0].getWebPath) }}"
                     alt="{{ potin.titre }}"
                     loading="lazy">
            </div>
        {% else potin.imageName %}
            <div class="bac_img"
                 style="background-image: url('{{ vich_uploader_asset(potin, 'ImageFile') }}')"
                 role="presentation">
                <img src="{{ vich_uploader_asset(potin, 'ImageFile') }}"
                     alt="{{ potin.titre }}"
                     loading="lazy">
            </div>
        {% endif %}
    </div>
</div>


<div class="pwa-inner-post">
    {% for article in potin.htmlcontent %}
    <div class="pwa-post-content">
        <h2>{{ article.titre }}</h2>
        <div class="pwa-article-content">
            {{ article.contenu|raw }}
        </div>

        {% if article.mediaName is not null %}
            <div class="article-media">
                {% if article.mediaName matches '/\.(jpg|jpeg|png|gif)$/i' %}
                    <img src="{{ asset('uploads/articles/' ~ article.mediaName) }}" alt="Illustration de {{ article.titre }}">
                {% elseif article.mediaName matches '/\.(mp4|webm|ogg)$/i' %}
                    <video controls>
                        <source src="{{ asset('uploads/articles/' ~ article.mediaName) }}" type="video/mp4">
                        Votre navigateur ne supporte pas la lecture de vid√©os.
                    </video>
                {% endif %}
            </div>
        {% endif %}
    </div>
</div>

