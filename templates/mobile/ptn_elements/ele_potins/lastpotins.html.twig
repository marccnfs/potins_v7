<div class="pg_other">
    <div class="pwa-board-list-replace">
        {% for potin in potins %}
            <a href="{{ path('show_potin', {"slug": potin.slug, "id": potin.id}) }}"
               class="pwa-potinary-card"
               aria-label="{{ potin.titre }}">

                <div class="pwa-inner-potinary">
                    <p class="pwa-goaff-potinary-fix min30 card-{{ potin.agePotin }}">{{ potin.agePotin }}</p>
                    <div class="pwa-w-titlpotinary">
                        <h3 title="Potin : {{ potin.titre }}">{{ potin.titre }}</h3>
                        {% if potin.subject is not same as (" ") and potin.subject is not empty %}
                            <p class="pwa-potinary-subtitle">{{ potin.subject|striptags|u.truncate(120, 'â€¦') }}</p>
                        {% endif %}
                    </div>

                    <time class="pwa-potinary-b" datetime="{{ potin.createAt|date('c') }}">{{ potin.createAt|date('d/m/Y') }}</time>
                </div>

                <div class="pwa-illustr-potinary-card">
                    <div class="pwa-e-pictfull-card">
                        {% if potin.media.imagejpg[0].namefile is defined %}

                            <div class="pwa-pict-event"
                                 style="background-image: url('{{ asset(potin.media.imagejpg[0].getWebPath) }}')"
                                 role="presentation">
                                <img src="{{ asset(potin.media.imagejpg[0].getWebPath) }}"
                                     alt="{{ potin.titre }}"
                                     loading="lazy">
                            </div>
                        {% elseif potin.imageName %}
                            <div class="pwa-pict-event"
                                 style="background-image: url('{{ vich_uploader_asset(potin, 'ImageFile') }}')"
                                 role="presentation">
                                <img src="{{ vich_uploader_asset(potin, 'ImageFile') }}"
                                     alt="{{ potin.titre }}"
                                     loading="lazy">
                            </div>

                        {% endif %}
                    </div>
                </div>
            </a>
        {% else %}
            <p class="pwa-empty-state">Aucun potin disponible pour le moment.</p>
        {% endfor %}
    </div>
</div>
