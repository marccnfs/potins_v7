{# pwa/ptn_public/menu_header.html.twig #}
<header class="pwa-appbar" data-controller="menu">
    <div class="pwa-appbar__left">
        <a href="{{ path('potins_index') }}" class="pwa-logo" aria-label="Accueil">
            {{ include('svg/potins/logopotins_svg_small.html.twig') }}
        </a>
    </div>

    <div class="pwa-appbar__right">
        <button
            type="button"
            class="pwa-burger"
            aria-label="Ouvrir le menu"
            aria-controls="pwa-menu-panel"
            aria-expanded="false"
            aria-haspopup="true"
            data-menu-target="trigger"
            data-action="click->menu#toggle"
        >
            <span></span><span></span><span></span>
        </button>
    </div>

    {# overlay (fond assombri) #}
    <div
        class="pwa-menu__overlay"
        data-menu-target="overlay"
        data-action="click->menu#close"
        hidden
    ></div>

    {# panneau plein écran #}
    <nav
        id="pwa-menu-panel"
        class="pwa-menu"
        data-menu-target="panel"
        aria-hidden="true"
        tabindex="-1"
        hidden
    >
        <div class="pwa-menu__appbar">
            <button
                type="button"
                class="pwa-back"
                aria-label="Fermer le menu"
                data-menu-target="close"
                data-action="click->menu#close"
            >
                <!-- flèche retour -->
                <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                     stroke-width="2" stroke-linecap="round" stroke-linejoin="round" role="img">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
            </button>
            <span class="pwa-menu__title">Menu</span>
        </div>

        <ul class="pwa-menu__list" data-menu-target="firstLink">
            <li><a href="{{ path('potins_index') }}">Accueil</a></li>
            <li><a href="{{ path('events_all') }}">Les prochains potins</a></li>
            <li><a href="{{ path('board_all') }}">Les derniers potins</a></li>
            <li><a href="{{ path('agenda_index') }}">Agenda</a></li>
            <li><a href="{{ path('ressources') }}">Ressources</a></li>
            <li><a href="{{ path('cnfs') }}">CNFS</a></li>
            {# <li><a href="{{ path('noticezer') }}">Info locale</a></li> #}

            <li class="pwa-menu__sep" aria-hidden="true"></li>

            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <li><a href="{{ path('profil_customer') }}">Profil</a></li>
                <li><a href="{{ path('office_member') }}">Panneau</a></li>
                <li><a href="{{ path('admin_index') }}">Backoffice</a></li>
                <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
            {% elseif is_granted('ROLE_MEDIA') %}
                <li><a href="{{ path('parameters') }}">Informations</a></li>
                <li><a href="{{ path('office_media') }}">Planning Potins</a></li>
                <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
            {% else %}
                <li><a href="{{ path('app_login') }}">Se connecter</a></li>
            {% endif %}
        </ul>

        {# (Option) si tu veux un footer dans le panneau : place un bloc ici #}
    </nav>
</header>
