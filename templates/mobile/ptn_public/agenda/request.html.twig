{% block body %}
    <div class="pwa-container">
        <span class="pwa-hero__badge">Demande de rendez-vous</span>
        <h1>{{ event.title }}</h1>
        <p class="pwa-muted">
            {{ event.startsAt|date('d F Y H:i', event.timezone) }}
            {% if not event.isAllDay %}
                → {{ event.endsAt|date('H:i', event.timezone) }}
            {% endif %}
            • {{ event.categoryLabel }}
            • {{ event.locationName ?? 'Lieu à confirmer' }}
        </p>

        <p>Complétez vos coordonnées pour que l’équipe CNFS puisse vous recontacter à propos de cet atelier.</p>

        <div class="pwa-card">
            <div class="pwa-card__body">
                <div class="pwa-form">
                    {{ form_start(form) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.phone) }}
                    {{ form_row(form.message) }}
                    <div class="pwa-form__actions" style="display:flex; flex-direction:column; gap:0.75rem;">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                        <a class="btn btn-light" href="{{ path('event_show', {slug: event.slug}) }}">Annuler</a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
