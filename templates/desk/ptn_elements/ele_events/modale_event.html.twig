<div class="event-card">
    <div class="event-image">
        {% set img = event.potin.media.imagejpg[0].getWebPath ?? event.media.imagejpg[0].getWebPath ?? '' %}
        {% if img %}
            <img src="{{ asset(img) }}" alt="{{ event.titre }}">
        {% endif %}
    </div>

    <div class="event-details">
        <h4 class="event-title">{{ event.titre|lower|capitalize }}</h4>
        <p class="event-date">
            <i class="fas fa-calendar-alt"></i> {{ event.appointment.starttime|date("d-m-Y") }}
        </p>
        <p class="event-description">
            {{ event.description|u.truncate(100, '...')|raw|lower|capitalize }}
        </p>
        <a class="btn-event" href="{{ path('show_potin', {'slug': event.potin.slug, 'id': event.potin.id}) }}">
            <i class="fa fa-arrow-right"></i> En savoir plus
        </a>
    </div>
</div>
