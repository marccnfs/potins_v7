<div class="resa-modal">
    <div class="modal-header">
        <h3>Réservation pour {{ event.titre|capitalize }}</h3>
        <p>Date : {{ date|date('d/m/Y') }}</p>
    </div>
    <div class="modal-body">
        <div class="event-info">
            <p>Description : {{ event.description|raw|default('Aucune description') }}</p>
            <p>Lieu : {{ event.locatemedia.nameboard|default('Non défini') }}</p>
            <p>Âge minimum : {{ event.potin.agepotin|default('N/A') }} ans</p>
        </div>
        <div class="event-image">
            {% set images = [] %}

            {% if event.potin is defined and event.potin.media is defined and event.potin.media.imagejpg is defined %}
                {% set images = event.potin.media.imagejpg %}
            {% endif %}

            {% set firstImage = images|first %}

            {% if firstImage %}
                <img src="{{ asset('upload/module/' ~ firstImage.namefile) }}" alt="Image de l'événement">
            {% else %}
                <div class="no-image">Aucune image</div>
            {% endif %}
        </div>
    </div>
    <div class="modal-footer">
        {{ include('desk/ptn_media/resa/form/resapotinform.html.twig') }}
    </div>
</div>
