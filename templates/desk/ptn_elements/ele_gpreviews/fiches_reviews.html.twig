{%  if nbreview > 0 %}


    {% if nbreview == 1 %}
        <table class="aff_table t_size_list">
            <tbody>
            {%  for key, rw in tabreviews %}
                {% if rw.type %}
                    <tr>
                        <td>{{ rw.titre }}</td>
                        <td><a href="{{path('manage_review_resume',{id:rw.id,gp:gpreview.id}) }}" class="btn btn-primary">editer</a>
