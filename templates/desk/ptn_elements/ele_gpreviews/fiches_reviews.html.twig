                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rw.id) }}">
                                <button class="btn btn-danger">supprimer</button>
                            </form>
                        </td>
                    </tr>
                    <tr>
                        <td class="stp_b_orange">trame animation</td>
                        <td>
                            <a href="{{path('manage_review_trame',{id:'new',gp:gpreview.id})}}" class="btn btn-primary">créer</a>
