<div class="logo_msg_blog">
    <div class="wb-logo-pop">
    {% if msg[1].template.logo %}
        <div   class="wb_logo" style="background-image: url('{{ asset('spaceweb/template/'~msg[1].template.logo.namefile ) }}')"></div>
    {% else %}
        <div  class="wb_logo" style="background-image: url('{{ asset('img/pinsaffi.png') }}')"></div>
    {% endif %}
    </div>
</div>

<div class="_li-fx">

            <div class="af_flx-W">
{#
                <div class="origin">
                    <div class="origin">
                        <span>Borad : {{msg[1].namewebsite }}</span>
                    </div>
                </div>
#}
                <div class="origin">
                    {% if msg[0].tabpublication.post  %}
                        <span>sur la publication : {{msg[0].tabpublication.post.titre|capitalize }}</span>
                    {%  else %}
                        <span>sur la publication : {{msg[0].tabpublication.offre.titre|capitalize }}</span>
                    {% endif %}
                </div>
            </div>

            <div class="af_flx-W">
                <div class="origin">

                    {% if not  msg[0].isdispatchsender %}
                        <span class="{{ msg[0].sender ?"":"_co-bk"}}">Nouveau contact</span>
                    {% endif %}

                    {% if  msg[0].isdispatchsender %}
                        <span>de&nbsp;</span><span class="{{ msg[0].sender ?"":"_co-bk"}}">{{- msg[0].tballmsgp.dispatch.name|trim -}}&nbsp;:&nbsp;</span>
                    {% else %}
                        <span>de&nbsp;</span><span class="{{ msg[0].sender ?"":"_co-bk"}}">{{- msg[0].tballmsgp.contact.useridentity.firstname|trim -}}&nbsp;:&nbsp;</span>
                    {% endif %}

                    {%  if  msg[0].tballmsgp.extract is not null%}
                        <span class="obje">{{- msg[0].tballmsgp.extract|u.truncate(20, '...', false) -}}</span>
                    {%  else %}
                        <span class="obje">&nbsp;...</span>
                    {%  endif %}
                </div>
            </div>
 </div>
<div>
    {%  if  msg[0].tballmsgp.lastconvers %}
        {%  set datetosee = msg[0].tballmsgp.lastconvers %}
    {%  else %}
        {%  set datetosee = msg[0].createAt %}
    {% endif %}

    {% if datetosee|format_datetime('short', 'none', locale='fr') is same as ("now"|format_datetime('short', 'none', locale='fr')) %}
        <div class="date_msg">{{- datetosee|format_datetime('none', 'short', locale='fr') -}}</div>
    {% else %}
        <div class="date_msg">{{- datetosee|format_datetime('medium', 'none', locale='fr')|slice(0,-4) -}}</div>
    {% endif %}
</div>

