<div class="titlpotin">
     <h2 title="ressouce : {{ offre[0].titre }}">{{ offre[0].titre|lower|capitalize }}</h2>
</div>

{%  for ressource in offre[0].gppresents.articles %}
<div class="illustr-ressourc" >
    <div class="como">
        {% if ressource.composition is not same as (" ") %}
            <h3>{{ ressource.composition|raw|lower|capitalize }}</h3> {# {{post.subject|u.truncate(80, '...')|lower|capitalize}} #}
        {% endif %}
    </div>
    <div class="iner_compo">

        <div class="gallery" data-ce-columns="1" data-ce-images="1">
            <div class="compo-row">
                <div class="compo-column">
                    <figure role="group" aria-label="{{ressource.titre}}">
                        {% if ressource.pict is not null %}
                            <img src="{{ asset(ressource.pict.getwebpath) }}" alt="{{ressource.titre}}">
                            <figcaption class="caption">{{ressource.titre}}</figcaption>
                        {% endif %}
                    </figure>
                </div>
            </div>
        </div>

        <div class="txt_r1">
            <p>{{ ressource.composition }}</p>
        </div>

    </div>

    {#
