        {% if ressource.pict is not null %}
        <div class="bac_img" style="background-image: url('{{ asset('spaceweb/template/'~ressource.pict.namefile) }}')"></div>
        {% endif %}
    </div>
    #}
</div>


<div class="inner-ressourc">
        <div class="ressourc_content">
            <div class="r_ctnt">
                <p class="iner_list">{{ressource.descriptif}}</p>
            </div>
        </div>
</div>
