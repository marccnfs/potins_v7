<div class="fx-row-ress">
    <div class="left_row_ress">
        <div class="titlpotin">
            <h2 title="ressouce : {{ ressource.titre }}">{{ ressource.titre|lower|capitalize }}</h2>
        </div>
        <div class="cadre_content">
            <div class="text_cadre">
                {% if ressource.composition is not same as (" ") %}
                    <h3>{{ ressource.composition|raw|lower|capitalize }}</h3>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="right_row_ress">
        <div class="pic_right_ress">
            <figure role="group" aria-label="{{ressource.label}}">
                {% if ressource.pict is not null %}
                    <img src="{{ asset(ressource.pict.getwebpath) }}" alt="{{ressource.label}}">
                    <figcaption class="caption">{{ressource.label}}</figcaption>
                {% else %}
                    {% if ressource.imageName %}
                    <img src="{{ vich_uploader_asset(ressource, 'ImageFile') }}" alt="{{ressource.label}}">
                    <figcaption class="caption">{{ressource.label}}</figcaption>
                    {% endif %}
                {% endif %}
            </figure>
        </div>
    </div>
</div>


<div class="cadre_content">
    <div class="text_cadre txt_r1">
        <p>{{ ressource.descriptif }}</p>
    </div>
</div>

