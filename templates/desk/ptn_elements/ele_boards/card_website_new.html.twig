<div class="card-wb">
    <div class="card-header">
        {% set background = board.template.background.getWebPath ?? asset('img/default-bg.jpg') %}

        <div class="header-image" style="background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.8)), url({{ background }})">
            <div class="header-content">
                <h2 class="board-name">{{ board.nameboard }}</h2>
                <p class="board-description">{{ board.template.description|raw }}</p>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="info-section">
            {% set adr = sector.adresse[0] ?? null %}
            <div class="info-item">
                <i class="fas fa-map-marker-alt"></i>
                <span>
                    {% if adr %}
                        {{ adr.numero }} {{ adr.nomvoie }}, {{ adr.codepostal }} {{ adr.nomcommune }}
                    {% else %}
                        {{ board.locality.city }}
                    {% endif %}
                </span>
            </div>

            {% if board.attached %}
                <div class="info-item">
                    <i class="fas fa-clock"></i>
                    {{ include('desk/ptn_elements/ele_times/opencity.html.twig') }}
                </div>
            {% endif %}

            <div class="info-item">
                <i class="fas fa-phone"></i>
                <span>{{ board.template.telephonespaceweb }}</span>
            </div>

            {% if board.url %}
                <div class="info-item">
                    <i class="fas fa-link"></i>
                    <a class="btn-website" href="{{ board.url }}" target="_blank">Visiter le site</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
