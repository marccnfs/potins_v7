<div class="dashboard-card">
    <div class="dashboard-card__header">
        <div>
            <p class="dashboard-card__hint">Ressources</p>
            <h3 class="dashboard-card__title">Cartes disponibles</h3>
        </div>
        <div class="dashboard-action-list">
            {% if board is defined %}
                <a class="btn btn-primary" href="{{ path('new_carte', {'id': board.id}) }}">
                    <i class="fa fa-plus"></i> Ajouter une ressource
                </a>
            {% endif %}
        </div>
    </div>

    {% if articles|length > 0 %}
    {% for key, cat in articles %}
    {% if cat|length > 0 %}
    <div class="dashboard-section">
        <div class="dashboard-section__header">
            <h4 class="dashboard-section__title">
                <span class="dashboard-badge card-{{ cat[0].categorie.coul|default('') }}">{{ key }}</span>
            </h4>
        </div>
        <ul class="dashboard-list">
            {% for art in cat %}
                <li class="dashboard-list__item">
                    <div class="dashboard-list__content">
                        <span class="dashboard-table__title">{{ art.titre }}</span>
                    </div>
                    <div class="dashboard-list__actions">
                        <a href="{{ path('edit_carte', {id: art.id}) }}" class="btn-link btn-link--warning">
                            <i class="fa fa-edit"></i> Éditer
                        </a>
                        <form method="post" action="{{ path('delete_carte', {id: art.id}) }}" class="dashboard-actions__form" onsubmit="return confirm('Voulez-vous vraiment supprimer cet élément ?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ art.id) }}">
                            <button class="btn-link btn-link--danger" type="submit">
                                <i class="fa fa-trash"></i> Supprimer
                            </button>
                        </form>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}
    {% endfor %}
    {% else %}
        <p class="dashboard-empty">Aucune carte n'a encore été créée.</p>
    {% endif %}

</div>

