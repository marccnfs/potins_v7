<div class="stape_bull" id="postar" data-content="{{ content }}" data-post="{{ rssc.id }}"></div>
<form class="w100" enctype="multipart/form-data" method="post" name="fileinfo">

    <div class="form_all_affi">
        <h1>edition ressource :</h1>
        <div class="bk-form-all">

            <div class="form-group">
                <label for="titrenews">Titre</label>
                <input type="text" class="form-affi" value="{{ rssc.titre }}" name="titre" id="titrenews" placeholder="titre....." required="required">
                <span class="error" aria-live="polite"></span>
            </div>


            <div class="form-group">
                <label for="cat" class="required">Categorie</label>
                <select id="cat" name="cat">
                    <option value="">{{ rssc.categorie.name }}</option>
                    {%  for cat in cats %}
                        <option value="{{ cat.id }}">{{ cat.name }}</option>
                    {%  endfor %}
                </select>
                <span class="error" aria-live="polite"></span>
            </div>

            <div class="form-pictandcontent">

                <div class="form-group">
                    <div class="blk_upload">
                        <div class="btn_upload">
                            <label id="media-img" class="cmd-btn-media smalbtblue fa fa-camera" for="uploadImage"></label>
                            <span>image d'illustration :</span>
                            <input id="uploadImage" type="file" name="uploadImage" accept=".jpg, .jpeg, .png" style="display:none"/>
                        </div>
                    </div>
                    {% if rssc.pict is defined %}
                        <div class="preview">
                            <img src="{{ asset(rssc.pict.getWebPAth) }}" alt="image post">
                        </div>
                    {% else %}
                        <div class="preview"></div>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label for="composition" class="required">introduction</label>
                    <input type="text" id="composition" name="composition" value="{{ rssc.composition }}">
                    <span class="error" aria-live="polite"></span>
                </div>

                <div class="form-group">
                    <label for="descriptif">Détail</label>
                    <input type="text" id="descriptif" name="descriptif" value="{{ rssc.descriptif }}"
                           placeholder="Entrez une description courte">
                    <span class="error" aria-live="polite"></span>
                </div>


                <div class="form-group">
                    <div class="label-upimg">ajoutez un contenu</div>

                   <div id="articlenews">
                        {{ include('WysiWyg/toolbar.html.twig') }}
                        <div id="editor"></div>
                    </div>
                </div>

            </div>
            <div class="gp-form-row-col2">
                <div class="progress">
                    <div id="loader-icon"><img src="{{asset('svg/LoaderIcon.gif')}}"  alt="loader"/></div>
                </div>
                <div class="iner-bt">
                    <button id="post-news" class="btn-send">Enregistrez</button>
                </div>
            </div>
        </div>
    </div>
</form>


