<form class="w100" id="ressource-form" enctype="multipart/form-data" method="post" name="fileinfo">
        <div class="form_all_affi">
            <h1>Nouvelle ressource :</h1>
            <div class="bk-form-all">

                <div class="form-group">
                    <label for="titrenews">Titre</label>
                    <input type="text" class="form-affi" name="titre" id="titrenews" placeholder="titre....." required="required">
                    <span class="error" aria-live="polite"></span>
                </div>

                <div class="form-group">
                    <label for="cat" class="required">Categorie</label>
                    <select id="cat" name="cat">
                        <option value="}">--s√©lectionnez  une categorie</option>
                        {%  for cat in cats %}
                        <option value="{{ cat.id }}">{{ cat.name }}</option>
                        {%  endfor %}
                    </select>
                    <span class="error" aria-live="polite"></span>
                </div>

                <div class="form-pictandcontent">

                    <div class="form-group">
                        <div class="blk_upload">
                            <div class="btn_upload">
                                <label id="media-img" class="cmd-btn-media smalbtblue fa fa-camera" for="uploadImage"></label>
                                <span>image d'illustration :</span>
                                <input id="uploadImage" type="file" name="uploadImage" accept=".jpg, .jpeg, .png" style="display:none"/>
                            </div>
                            <div class="preview"></div>
                        </div>
                        <div class="form-group">
                            <label for="label" class="required">label</label>
                            <input type="text" id="label" name="label">
                            <span class="error" aria-live="polite"></span>
                        </div>
                        {#
                        <div class="file-uploader">
                            <div class="labels_form">
