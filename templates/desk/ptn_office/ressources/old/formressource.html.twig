                            </div>
                            <div class="preview"></div>
                        </div>
                        #}
                    </div>

                    <div class="form-group">
                        <label for="composition" class="required">sous titre</label>
                        <input type="text" id="composition" name="composition">
                        <span class="error" aria-live="polite"></span>
                    </div>

                    <div class="form-group">
                        <label for="descriptif" class="required">en quelques mots...</label>
                        <input type="text" id="descriptif" name="descriptif">
                        <span class="error" aria-live="polite"></span>
                    </div>

                    <!-- version 1 -->

                    <div id="articles-list">
                        <h3>Chapitres :</h3>
                        <button type="button" onclick="addChapter()">Ajouter un chapitre</button>
                    </div>

                    <!-- version 2 -->
                    <div id="articles-container">
                        <button type="button" onclick="addArticle()">Ajouter un chapitre</button>
                    </div>

