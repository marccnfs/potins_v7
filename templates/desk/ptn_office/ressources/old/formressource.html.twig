            <div class="gp-form-row-col2">
                <div class="progress">
                    <div id="loader-icon"><img src="{{asset('svg/LoaderIcon.gif')}}"  alt="loader"/></div>
                </div>
                <div class="iner-bt">
                    <button type="submit" id="post-news" class="btn-send">Enregistrez</button>
                </div>
            </div>
        </div>
    </div>
