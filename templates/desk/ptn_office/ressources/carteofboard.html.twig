    </div>
    {% if articles|length > 0 %}
        {% for key, cat in articles %}
             {% if cat|length > 0 %}
        <div class="dashboard-section">
            <div class="dashboard-section__header">
                <h4 class="dashboard-section__title">
                    <span class="dashboard-badge card-{{ cat[0].categorie.coul|default('') }}">{{ key }}</span>
                </h4>
            </div>
            <ul class="dashboard-list">
                {% for art in cat %}
                    <li class="dashboard-list__item">
                        <div class="dashboard-list__content">
                            <span class="dashboard-table__title">{{ art.titre }}</span>
                        </div>
                        <div class="dashboard-list__actions">
                            <a href="{{ path('ressource_manage', {id: art.id}) }}" class="btn-link btn-link--warning">
                                <i class="fa fa-edit"></i> Éditer
                            </a>
                            <form method="post" action="{{ path('delete_carte', {id: art.id}) }}" class="dashboard-actions__form" onsubmit="return confirm('Voulez-vous vraiment supprimer cet élément ?')">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ art.id) }}">
                                <button type="submit" class="btn-link btn-link--danger">
                                    <i class="fa fa-trash"></i> Supprimer
                                </button>
                            </form>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
        {% endfor %}
    {% else %}
        <p class="dashboard-empty">Aucune ressource n'a encore été enregistrée.</p>
    {% endif %}
</div>





