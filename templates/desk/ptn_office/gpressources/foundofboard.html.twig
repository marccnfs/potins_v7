<div class="dashboard-card">
    <div class="dashboard-card__header">
        <div>
            <p class="dashboard-card__hint">Menus &amp; formules</p>
            <h3 class="dashboard-card__title">Gestion des formules</h3>
        </div>
        <div class="dashboard-action-list">
            <a class="btn btn-outline-primary" href="{{ path('module_carte', {'board': board.id}) }}">
                <i class="fa fa-list"></i> Liste des plats
            </a>
            <a class="btn btn-outline-primary" href="{{ path('new_carte', {'id': board.id}) }}">
                <i class="fa fa-cutlery"></i> Ajouter des plats
            </a>
            <a class="btn btn-primary" href="{{ path('new_menu', {'id': board.id}) }}">
                <i class="fa fa-plus"></i> Nouvelle formule
            </a>
        </div>
    </div>

    {% if formules|length > 0 %}
        <ul class="dashboard-list">
            {% for formule in formules %}
                <li class="dashboard-list__item">
                    <div class="dashboard-list__content">
                        <span class="dashboard-table__title">{{ formule.name }}</span>
                        <span class="dashboard-table__meta">
                            <i class="fa fa-calendar"></i>
                            du {{ formule.parution.starttime|date('d/m/Y') }} au {{ formule.parution.endtime|date('d/m/Y') }}
                        </span>
                        <span class="dashboard-table__meta">
                            <i class="fa fa-clock-o"></i>
                            Créée le {{ formule.createAt|date('d/m/Y') }}
                        </span>
                        <span class="dashboard-badge {{ formule.publied ? 'badge--success' : 'badge--warning' }}">
                            <i class="fa fa-flag{% if formule.publied %}-checkered{% endif %}"></i>
                            {% if formule.publied %}Publié{% else %}En attente{% endif %}
                        </span>
                    </div>
                    <div class="dashboard-list__actions">
                        <a href="{{ path('edit_menu_day', {'id': formule.id}) }}" class="btn-link btn-link--warning">
                            <i class="fa fa-edit"></i> Éditer
                        </a>
                        <a href="{{ path('form-duplicate_formule', {'id': formule.id}) }}" class="btn-link">
                            <i class="fa fa-files-o"></i> Dupliquer
                        </a>
                        <a href="{{ path('form-delete_formule', {'id': formule.id}) }}" class="btn-link btn-link--danger">
                            <i class="fa fa-trash"></i> Supprimer
                        </a>
                        <a href="{{ path('form-publied_formule', {'id': formule.id}) }}" class="btn-link {{ formule.publied ? 'btn-link--success' : 'btn-link--warning' }}">
                            <i class="fa fa-flag{% if formule.publied %}-checkered{% endif %}"></i>
                            {% if formule.publied %}Publié{% else %}Publier{% endif %}
                        </a>
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="dashboard-empty">Pas encore de formule enregistrée.</p>
    {% endif %}
</div>
