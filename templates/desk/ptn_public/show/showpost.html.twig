{% block body %}
    {% set potin = post %}
    {% set potins = posts ?? [] %}
    {% set ressources = ressources ?? [] %}
    {% set eventGroups = events ?? [] %}
    {% set summary = eventSummary ?? null %}
    {% set referenceLocation = eventGroups|first|default(null) %}
    {% set primaryEvent =
        (summary is not null and summary.primaryEvent is defined) ? summary.primaryEvent :
        (referenceLocation is not null and referenceLocation.bookingEvent is defined) ? referenceLocation.bookingEvent :
        (referenceLocation is not null and referenceLocation.event is defined) ? referenceLocation.event :
        (referenceLocation is not null ? referenceLocation : null) %}
    {% set nextDate =
        (summary is not null and summary.nextDate is defined) ? summary.nextDate :
        (referenceLocation is not null and referenceLocation.nextDate is defined) ? referenceLocation.nextDate :
        (referenceLocation is not null and referenceLocation.dates is defined and referenceLocation.dates|length > 0)
        ? referenceLocation.dates|first
        : null %}
    <div class="container-showpost">
        <div class="header-showpost">
            <h1>{{ potin.titre|lower|capitalize }}</h1>
            {% if potin.description is defined and potin.description is not same as (" ") %}
                <h3>{{ potin.description|raw|lower|capitalize }}</h3>
            {% endif %}
            {% if nextDate %}
                <time class="datepotin" datetime="{{ nextDate|date('Y-m-d') }}">
                    Prochaine date : {{ nextDate|date('d/m/Y') }}
                </time>
            {% elseif potin.createAt is defined %}
                <time class="datepotin" datetime="{{ potin.createAt|date('Y-m-d') }}">
                    Mis en ligne le : {{ potin.createAt|date('d/m/Y') }}
                </time>
            {% endif %}
        </div>

        <div class="content-grid">
            <!-- üü¢ Contenu principal -->
            <div class="main-content">
                {{ include('desk/ptn_elements/ele_potins/modale_potinv2.html.twig') }}
            </div>

            <!-- üü¢ Sidebar des ressources -->
            <aside class="sidebar">

                <div class="eventshow-sidebar">
                    <h3>üóìÔ∏è Prochaines dates</h3>
                    {{ include('desk/ptn_elements/ele_events/modale_widg_event.html.twig', { eventSummary: summary, eventGroups: eventGroups }) }}

                    {% if eventGroups|length > 0 %}
                        <div class="eventshow-dates">
                            <div class="eventshow-dates-grid">
                                {% for event in eventGroups %}
                                    {{ include('desk/ptn_elements/ele_events/widget_datesevent.html.twig', { location: event, colorIndex: loop.index0 }) }}
                                {% endfor %}
                            </div>
                        </div>
                    {% else %}
                        <p class="eventshow-empty">Aucune date n‚Äôest planifi√©e pour le moment. Revenez vite !</p>
                    {% endif %}
                </div>

                <h3>üìö Ressources associ√©es</h3>
                {% for ressource in ressources %}
                    {{ include('desk/ptn_elements/ele_ressources/widget_lite_ressources.html.twig') }}
                {% endfor %}
                <!-- üü¢ Acc√®s r√©serv√© aux participants -->
                <div class="access-section">
                    <div class="author">üîí Retour sur les ateliers<br>(acc√®s r√©serv√© aux participants)</div>

                    <button class="link_code"><i class="fa fa-sign-in" id="goaccess"></i></button>

                    <div class="pop_code" id="codeaccess" data-post="{{ potin.id }}" style="display:none">
                        <button class="close_pop" id="closecode">
                            <i class="fa fa-times"></i>
                        </button>
                        <h2>Entrez votre code d'acc√®s :</h2>
                        <div id="testcode"></div>
                        <test-access></test-access>
                    </div>
                </div>

                {% if  potin.link is not null %}
                    <div class="list_content">
                        <h3>üé≤ Cr√©e ton escape game ici !</h3>
                        <div class="bk_content">
                            <a class="btn-view-pdf" href={{ potin.link }}>
                                ‚õ≥ Go
                            </a>
                        </div>
                    </div>
                {% endif %}

                <!-- üü¢ Bloc des pr√©visualisations / revues -->
                {% if potin.gpreview is not null %}
                    {% if potin.gpreview.media.imagejpg is defined %}
                        <div class="w_review">
                            <div class="pict_wall">
                                {% for pict in potin.gpreview.media.imagejpg %}
                                    <div class="little-pic-block"
                                         style="background-image: url({{ asset(pict.getWebPath) }})"></div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    {% if  potin.gpreview.reviews|length > 0 %}
                        <div class="list_content">
                            <h3>üìÑ Documents associ√©s</h3>
                            <ul class="bk_content">
                                {% for rw in potin.gpreview.reviews %}
                                    <li>
                                        {{ rw.titre }}
                                        {% set typ = rw.type ? "1" : "0" %}
                                        <a class="btn-view-pdf"
                                           href="{{ path('show_potin_review_pdf', {type: typ, slug: potin.slug, id: potin.id}) }}">
                                            <i class="fa fa-eye"></i> Voir
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}
                {% endif %}
            </aside>
        </div>

        <!-- üü¢ Autres ateliers -->
        {#   <section class="related-posts">
            <h3>üìå Autres ateliers √† d√©couvrir</h3>
            {{ include('desk/ptn_elements/ele_potins/tabOrderPotins.html.twig') }}
        </section>
        #}

        <div class="cadre_title related-posts">
            <h3>üìå Autres ateliers √† d√©couvrir</h3>
        </div>

        {% if potins|length >0 %}
            <div class="tgl-100">
                <div class="fx-content_rep_potinary">
                    {{ include('desk/ptn_elements/ele_potins/lastpotinslist.html.twig') }}
                </div>
            </div>
        {% else %}
            <div class="tgl-100">
                <div class="fx-content_rep_potinary">
                    <div class="flex-board">
                        <div class="flex-notb_v6-fix">
                            <h3> Aucun potin disponible</h3>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}


    </div>
{% endblock %}

{% block footer %}
    {{ include('footer/'~agent~'/affichange_footer_rel.html.twig') }}
{% endblock %}

{% use "js/js_public_codeaccess.html.twig" %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
