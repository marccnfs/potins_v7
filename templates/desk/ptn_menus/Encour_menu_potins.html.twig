<!-- Logo -->
<a href="{{ path('potins_index') }}">
    <div id="logotop" class="logo-large zz_top-top logo-container">
        {{ include('svg/potins/vector1.html.twig') }}
    </div>
    <div id="logosmall" class="logo-small svg_logo_small logo-small">
